    <RelativeLayout
            android:id="@+id/name_wrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="1"
                android:textSize="36sp"
                android:textColor="#FFFFFF"
                android:lineSpacingExtra="7sp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="-24dp"
                android:shadowColor="#444444"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                />
        <!--
    <edu.SJTU.ChiChi.views.VerticalTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:lineSpacingMultiplier="1.3"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"/>
             -->
        <TextView
                android:id="@+id/building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/name"
                android:layout_alignBottom="@+id/name"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#444444"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

        <TextView
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/building"
                android:layout_alignBottom="@+id/name"
                android:textSize="24sp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="@string/middot"
                android:textColor="#FFFFFF"
                android:shadowColor="#444444"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/restaurant"
                android:layout_toRightOf="@+id/dot"
                android:layout_alignBottom="@+id/name"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:shadowColor="#444444"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>

        <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="84sp"
                android:layout_toRightOf="@+id/name"
                android:layout_above="@+id/building"
                android:textColor="#FFFFFF"
                android:shadowColor="#444444"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copyright_wrap"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true">

            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/cc_logo"
                    android:src="@drawable/cc_logo"
                    android:contentDescription="@string/app_name"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="3dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/copyright"
                    android:text="@string/ChiChi_Copyright"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
            android:id="@+id/content_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/name_wrap">

        <RelativeLayout
                android:id="@+id/row_wrap_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#50333333"
                android:padding="10dp"
                android:minHeight="100dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/taste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#FFFFFF"/>

        </RelativeLayout>
        <!--
                <RelativeLayout
                        android:id="@+id/row_wrap_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#50333333"
                        android:padding="10dp"
                        android:minHeight="100dp"
                        android:layout_marginTop="10dp">



                </RelativeLayout>
         -->
        <RelativeLayout
                android:id="@+id/row_wrap_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#50333333"
                android:padding="10dp"
                android:minHeight="100dp"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="#FFFFFF"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>